@model Vaga

@{
    Layout = "_Layout_OnlyCima";
}
@{
    ViewData["Title"] = "Adicionar Vaga";
}

<style>
    body {
        font-family: Arial, sans-serif;
        font-style: normal;
        background: rgb(222, 138, 172);
    }

    h1 {
        text-align: center;
        color: #eee1e1;
    }

    form {
        background: rgb(228, 161, 188);
        margin: auto;
        max-width: 600px;
        padding: 25px;
        border: 1px solid #aaa0a0cb;
        border-radius: 10px;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.363);
    }

    label {
        display: inline-block;
        width: 150px;
    }

    input[type="text"], select, input[type=number] {
        padding: 5px;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
        border-radius: 3px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    input[type="email"], select {
        padding: 5px;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
        border-radius: 3px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    input[type="submit"] {
        background-color: rgb(188, 288, 161);
        color: rgba(20, 20, 20, 0.692);
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
    }

        input[type="submit"]:hover {
            background-color: rgb(161, 288, 228);
        }

    .cadastrar-btn {
        display: grid;
    }

    footer {
        color: blue;
        text-align: center;
        font-style: italic;
    }

    /* Estilos para o campo CPF */
    input[type="text"][id="cpf"] {
        width: 100%;
        padding: 5px;
       /* margin-bottom: 10px;*/
        font-size: 16px;
        border-radius: 3px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        text-align: left;
    }

        input[type="text"][id="cpf"]:focus {
            border-color: #4CAF50;
        }

        input[type="text"][id="cpf"][required]:invalid {
            /*border-color: red;*/
        }

        input[type="text"][id="cpf"]::-webkit-input-placeholder {
            color: #999;
        }

        input[type="text"][id="cpf"]::-moz-placeholder {
            color: #999;
        }

        input[type="text"][id="cpf"]:-ms-input-placeholder {
            color: #999;
        }

        input[type="text"][id="cpf"]:-moz-placeholder {
            color: #999;
        }

    /* Aplica a máscara de CPF */
    input[type="text"][id="cpf"] {
        letter-spacing: 0.01em;
    }

        input[type="text"][id="cpf"]::-webkit-outer-spin-button,
        input[type="text"][id="cpf"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    input[type="text"][id="cpf"] {
        -moz-appearance: textfield;
    }


    .legendas-vaga {
        color: gray;
    }
</style>



<h1>Criar Vaga</h1>

        <form asp-action="Create">

            <div class="form-group">
                <input asp-for="IdOng" class="form-control" placeholder="Matricula Ong" />
                <span asp-validation-for="IdOng" class="text-danger"></span>
            </div>

             <div class="form-group">
                <select asp-for="Tipo" id="tipo"  style="padding: 8px; margin-top:10px">
                    <option value="Escolha">Tipo da Vaga</option>
                    <option value="Tempo Integral">Tempo Integral</option>
                    <option value="Meio Periodo">Meio Periodo</option>
                </select>
            </div>

            <div class="form-group">
                <select asp-for="Turno" id="turno"  style="padding: 8px; margin-top:10px">
                    <option value="Escolha">Turno da Vaga</option>
                    <option value="Manha">Manhã</option>
                    <option value="Tarde">Tarde</option>
                    <option value="Noite">Noite</option>
                    <option value="Integral">Integral</option>
                </select>
            </div>

            <div class="form-group">
                <input asp-for="Descricao" class="form-control" placeholder="Descrição da Vaga" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Habilidade" class="form-control" placeholder="Habilidade" />
                <span asp-validation-for="Habilidade" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label class="legendas-vaga">Data Inicio:</label>

                <input type="date" asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label class="legendas-vaga">Data Fim:</label>

                <input type="date" asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>

            <div class="cadastrar-btn">
                <input type="submit" value="Cadastrar">
            </div>
        </form>
