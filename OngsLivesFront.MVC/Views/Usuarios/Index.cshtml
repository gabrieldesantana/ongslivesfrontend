@model IEnumerable<Usuario>
@{
    Layout = "_Layout2";
}
@{
    ViewData["Title"] = "Index";
}

<style>
    h1 {
        text-align: center;
    }
</style>

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-danger" role="button">Cadastrar Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Actived)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Actived)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a> |
            </td>
        </tr>
}
    </tbody>
</table>
