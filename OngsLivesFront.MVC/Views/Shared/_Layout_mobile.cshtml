@@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap');

body{

    font-family: 'Open Sans', sans-serif;
    color: black;
    font-size: 14px;
    
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
}

a{
    text-decoration: none;
}

header{
    width: 100%;
    height: 33px;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: space-around;
    background-color: #BD4D9E;
    padding: 7px;    
    box-sizing: border-box;
}

.cabeca {
    padding: 10px;
}

.cabecaEsquerda{
    height: max-content;
    width: max-content;
}

.cabecaEsquerda a{
    background-color: #a9fbb1;  
    text-decoration: none;
    padding: 8.5px;
    padding-right: 15px;
    margin-left: 10px;
    color: black;    

    text-align: center;

    border-radius: 4px;
    margin: 5px;
    padding: 5px 10px;
}

.cabecaDireita{
    align-items: center;
    text-align: center;
}

.cabecaDireita a {
    text-align: center;
    border-radius: 4px;
    margin: 5px;
    padding: 5px 10px;
}

.cabecaDireita .lupa 
{
    padding: 5px;
    border-radius: 50%;
    background-color: #BD4D9E;
}

.centralCliente{
    color: black;
    background-color: #a9fbb1;
    text-decoration: none;
    padding: 5px;
    padding-left: 20px;
    margin-right: 30px;
    border-radius: 5px;        
}

.cabecaDireita i{
    background-color: black;
    color: white;
    padding: 9px;
    padding-top: 10px;    
}

.linha2{
    display: flex;
    text-align: center;
    justify-content: center;
    align-items: center;

    margin-top: 40px;
    margin-bottom: 20px;
   
    
    gap:20px;
}

.suporte, .mensagem, .chat{
    width: 150px;
    height: 20px;
    
    padding: 20px 5px;

    background-color: #a9fbb1;

    display: flex;
    justify-content: center;
    align-items: center;

    text-align: center;  
    align-items: center;

    border-radius: 4px;

}

.suporte, .mensagem, .chat a{
    font-size: 0.9rem;
}

.opcoes {
    margin-left: 5px;
    margin-right: 5px;
}


.chat{

}

.l1{
    display: flex;
    justify-content: center;   
}

.l1 hr{
    width: 950px;
    box-sizing: border-box;
}

.linha3{
    display: flex;
    text-align: center;
    justify-content: center;
    gap: 60px;
    margin-top: 5px;
    margin-bottom: 5px;
    position: relative;
}

.listradinamica1 {
    position: absolute;
    top: -8px;

    width: 100vw;
    height: 30px;
    background-color: rgba(255,255,255);
    z-index: -1;
}

.listradinamica2 {
    position: absolute;
    top: 20px;

/*    width: 100vw;
    height: 1px;*/
    background-color: rgba(0,0,0,0.5);
}

.corpo{
            background-image: url("https://prnt.sc/dJJJhvSud3WG");
    background-size: cover;
   /* height: 100vh;*/
    background-repeat: no-repeat;
    background-position: center;
}

.linha3 i {
    display: none;
}

        .pe {
            width: 100vw;
            height: 33px;
            background-color: #BD4D9E;
            padding: 7px;
            box-sizing: border-box;
            position: absolute;
            bottom: 0px;
        }



