@model IEnumerable<Voluntario>
@{
    Layout = "_Layout_mobile";
}
@{
    ViewData["Title"] = "Voluntarios";
}

<style>



    body {
        /* background: #f9f9f9;*/
        margin: 0;
        padding: 0;
        gap: 0px;
        background-color: pink;
    }

    h1 {
        text-align: center;
        color: rgba(0,0,0,0.7);
        font-weight: bold;
        font-size: 30px;
    }




    /* Estilos gerais */
    .body-catalogo {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        overflow-x: hidden;
        max-width: 100vw;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        grid-gap: 60px;
        justify-content: center;
        margin-top: 20px;
        width: 900px;
        /*padding: 0 20px;*/
        box-sizing: border-box;
        /*    background-color: pink;*/
    }

    .titulo-catalogo {
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        /*margin: 10px;*/
        text-align: center;
        /*gap: 10px;*/
        /*    border: 1px solid blue;*/
    }


    .image {
        display: flex;
        line-height: 1;
        width: 100%;
        max-width: 200px;
        height: auto;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
        /*   background: red*/
    }

        .image:hover {
            transform: scale(0.9);
        }



    .info-box {
        background-color: white;
        display: flex;
        /*  line-height: 1;*/
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        min-width: 200px;
        padding: 10px;
    }

    .image-info {
        /*margin-top: 10px;*/
    }

    .ong-info {
        line-height: 0;
        color: gray;
        font-size: 0.8rem;
        text-align: center;
        /*
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;*/
    }

    .opcoes-admin {
        display: none;
    }


    @@media (max-width: 770px) {

        .image-container {
            width: calc(100% - 20px);
            margin: 0px 10px;
            /*  border: 1px solid red;*/
        }

        .info-box {
            width: calc(80% - 20px);
            /*max-width: 48%;*/
        }

        .container {
            max-width: 100vw;
        }
    }

    @@media (max-width: 480px) {


        .image-container {
            width: calc(100% - 20px);
            /*margin: 5px 0;*/
            margin: 0px 5px;
            /* border: 1px solid blue;*/
        }

        .info-box {
            width: calc(80% - 20px);
            max-width: 48%;
        }
    }

    @@media (min-width: 800px) {
        .titulo-catalogo {
            display: none;
        }
    }

    @@media (min-width: 1000px) {

        .body-catalogo {
            min-height: 100px;
            overflow-x: hidden;
            width: 100vw;
        }

        .container {
            grid-gap: 70px;
            justify-content: center;
            /*  margin-top: 20px;*/
            min-width: 70vw;
            padding: 0px;
            box-sizing: border-box;
        }

        .opcoes-admin {
            display: block;
        }

        .titulo-catalogo {
            display: none;
        }
    }

</style>

<div class="body-catalogo">



    <div class="container">

        <div class="titulo-catalogo">
            <h1>Voluntarios</h1>
        </div>

        @foreach (var item in Model)
        {
            <div class="image-container">
              <a asp-action="Details" asp-route-id="@item.Id" ><img src="~/img/logo-image.png" alt="Imagem 1" class="image"></a>

                <div class="info-box">

                    <p class="image-info">@item.Nome</p>

                    <div class="ong-info">

                        @if (@item.Endereco != null)
                        {
                            <p><i class="fa-solid fa-location-dot"></i> @item.Endereco.Cidade - @item.Endereco.Estado</p>
                        }

                        <p style="font-size:0.6rem"><i class="fa-solid fa-at"></i> @item.Email</p>
                        <p><i class="fa-solid fa-phone"></i> @item.Telefone</p>

                        <p style="display:inline">Nota: </p>
                        @for (var i = 0; i < (int)item.Avaliacao; i++)
                        {
                            <i class="fa-solid fa-star estrelas-icone"></i>
                        }
                    </div>

                    <div class="opcoes-admin" style="margin-top:10px">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a> |
                    </div>
                </div>

            </div>
        }


    </div>

</div>
